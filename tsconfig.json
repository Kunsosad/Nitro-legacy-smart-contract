{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "hardhat"],
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true
  },
  "include": ["./scripts", "./typechain-types", "./contracts"]
}